.website-content
  .container
    .row
      .col-xs-12
        %h1 Users Search
        = form_for search_path, method: :get do |f|
          %p
            = text_field_tag :username, params[:username],class: 'form-control'
            %br
            = submit_tag 'Search', name: nil, class: 'btn btn-primary'
        %ul
          - unless @users.nil?
            - @users.each do |user|
              %li
                %h3
                  - if user.avatar.url.nil?
                    = image_tag(asset_path("no_avatar.jpg"), class: "avatar")
                  - else
                    = image_tag(user.avatar.url, class: "avatar")
                  = user.username
                  = form_for @room do |f|
                    = f.text_field :name, value: "#{current_user.username} #{user.username}"
                    = f.fields_for :membership do |ff|
                      = ff.hidden_field :owner_id, value: current_user.id
                      = ff.hidden_field :member_id, value: user.id
                    = f.submit user.username
